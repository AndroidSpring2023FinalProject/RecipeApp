<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvIngredientItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IngredientName"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tvIngredientItemQuantity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIngredientItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: X"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvIngredientItemName"
        app:layout_constraintEnd_toStartOf="@+id/iBtnDelete"
        app:layout_constraintTop_toTopOf="@+id/tvIngredientItemName"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/iBtnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvIngredientItemQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvIngredientItemQuantity"
        app:srcCompat="@drawable/ic_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>